<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:theme="@style/AppTheme.TemaSGR"
    >

    <TextView android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entre com uma das opções abaixo: " android:drawableRight="@mipmap/ic_help_black_24dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/text_prontuario"
            android:layout_width="wrap_content" android:width="120dp" android:maxLength="10"
            android:digits="0123456789"
            android:layout_height="wrap_content" android:hint="Prontuário"/>

        <EditText android:id="@+id/text_cpf" android:maxLength="11" android:digits="0123456789"
            android:layout_width="wrap_content" android:width="120dp"
            android:layout_height="wrap_content" android:hint="CPF"/>
    </LinearLayout>


    <EditText  android:width="235dp" android:maxLength="150"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_nome_paciente"
        android:hint="Nome do paciente"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisar "
        android:drawableLeft="@mipmap/ic_search_black_24dp"
        android:id="@+id/botao_pesquisar_paciente" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_paciente"
        android:layout_below="@+id/botao_pesquisar_paciente"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:scrollbars="vertical"/>


</LinearLayout>
