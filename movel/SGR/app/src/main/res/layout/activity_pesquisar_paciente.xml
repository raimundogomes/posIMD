<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >

    <TextView android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entre com uma das opções abaixo: " android:drawableRight="@mipmap/ic_help_white_24dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/text_prontuario"
            android:layout_width="wrap_content" android:width="100dp"
            android:layout_height="wrap_content" android:hint="Prontuário"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText android:id="@+id/text_cpf"
            android:layout_width="wrap_content" android:width="100dp"
            android:layout_height="wrap_content" android:hint="CPF"/>
    </LinearLayout>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_nome_paciente"
        android:hint="Nome do paciente"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisar"
        android:drawableLeft="@mipmap/ic_search_white_24dp"
        android:id="@+id/botao_pesquisar_paciente" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_paciente"
        android:layout_below="@+id/botao_pesquisar_paciente"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:scrollbars="vertical"/>


</LinearLayout>
