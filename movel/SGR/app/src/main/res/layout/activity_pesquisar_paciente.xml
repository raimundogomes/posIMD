<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
    <TextView android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entre com uma das opções abaixo: " android:drawableRight="@mipmap/ic_help_white_24dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/text_prontuario"
            android:layout_width="wrap_content" android:width="100dp"
            android:layout_height="wrap_content" android:hint="Prontuário"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText android:id="@+id/text_cpf"
            android:layout_width="wrap_content" android:width="100dp"
            android:layout_height="wrap_content" android:hint="CPF"/>
    </LinearLayout>
    <EditText android:id="@+id/text_nome_paciente"
        android:layout_width="wrap_content" android:width="200dp"
        android:layout_height="wrap_content" android:hint="Nome do paciente"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Pesquisar"
        android:drawableLeft="@mipmap/ic_search_white_24dp"
        android:id="@+id/botao_pesquisar_paciente"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content" android:id="@+id/text_resultado"
        android:layout_height="wrap_content" />

    <ListView android:layout_marginTop="15dp"
        android:id="@+id/list_pacientes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
